{
  "id": "temperature_alert",
  "name": "温度报警规则",
  "description": "当温度超过40度时发送报警",
  "enabled": true,
  "priority": 100,
  "version": 194,
  "conditions": {
    "type": "and",
    "and": [
      {
        "type": "simple",
        "field": "key",
        "operator": "eq",
        "value": "temperature"
      },
      {
        "type": "simple",
        "field": "value",
        "operator": "gt",
        "value": 40
      }
    ]
  },
  "actions": [
    {
      "type": "alert",
      "config": {
        "level": "warning",
        "message": "设备{{.DeviceID}}温度过高: {{.Value}}°C"
      }
    }
  ],
