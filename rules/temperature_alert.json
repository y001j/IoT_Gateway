{
  "id": "temperature_alert",
  "name": "温度报警规则",
  "description": "当温度超过40度时发送报警",
  "enabled": true,
  "priority": 100,
  "version": 1,
  "conditions": {
    "type": "simple",
    "and": [
      {
        "type": "simple",
        "field": "key",
        "operator": "eq",
        "value": "temperature"
      },
      {
        "type": "simple",
        "field": "value",
        "operator": "gt",
        "value": 40
      }
    ]
  },
  "actions": [
    {
      "type": "alert",
      "config": {
        "level": "warning",
        "message": "设备{{.DeviceID}}温度过高: {{.Value}}°C"
      }
    }
  ],
  "created_at": "2025-07-17T05:07:31.688982154+08:00",
  "updated_at": "2025-07-17T05:07:31.688982215+08:00"
}