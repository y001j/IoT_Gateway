{
  "id": "device_id_pattern_validation",
  "name": "设备ID模式验证",
  "description": "使用正则表达式验证设备ID格式",
  "enabled": true,
  "priority": 70,
  "conditions": {
    "type": "simple",
    "field": "device_id",
    "operator": "regex", 
    "value": "^(complex_sensor_|gps_tracker_)[0-9]{2}$"
  },
  "actions": [
    {
      "type": "transform",
      "config": {
        "add_tags": {
          "validation": "passed",
          "pattern": "device_id_format"
        }
      }
    },
    {
      "type": "alert",
      "config": {
        "level": "info",
        "message": "✅ 设备ID格式验证通过: {{.DeviceID}}"
      }
    }
  ]
}