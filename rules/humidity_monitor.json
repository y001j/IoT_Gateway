{
  "id": "humidity_monitor",
  "name": "湿度监控规则",
  "description": "监控湿度变化",
  "enabled": true,
  "priority": 50,
  "version": 1,
  "conditions": {
    "type": "simple",
    "field": "key",
    "operator": "eq",
    "value": "humidity"
  },
  "actions": [
    {
      "type": "aggregate",
      "config": {
        "forward": true,
        "functions": [
          "avg",
          "max",
          "min"
        ],
        "group_by": [
          "device_id"
        ],
        "output_key": "{{.Key}}_stats",
        "size": 10,
        "window_type": "count"
      }
    }
  ],
  "created_at": "2025-07-17T05:07:31.693127082+08:00",
  "updated_at": "2025-07-17T05:07:31.693127146+08:00"
}